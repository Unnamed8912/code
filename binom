long binomial_coefficient(int n, int k) {
    long bc[n+1][n+1]; // Таблица для треугольника Паскаля
    
    // База ДП: C(i,0)=1 и C(i,i)=1
    for(int i=0; i<=n; i++) bc[i][0] = 1;
    for(int i=0; i<=n; i++) bc[i][i] = 1;
    
    // Заполнение по рекуррентной формуле:
    // C(n,k) = C(n-1,k-1) + C(n-1,k)
    for(int i=2; i<=n; i++)
        for(int j=1; j<i; j++)
            bc[i][j] = bc[i-1][j-1] + bc[i-1][j];
    
    return bc[n][k]; // Искомый коэффициент
}
